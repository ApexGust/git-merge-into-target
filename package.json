{
  "name": "git-merge-into-target",
  "displayName": "Git快速合并",
  "description": "一键将当前分支合并到目标分支并推送; 支持一键批量更新所有本地分支，自动跳过失败分支，合并与分支管理更高效。",
  "version": "1.0.3",
  "icon": "icon.png",
  "publisher": "prayfff",
  "repository": {
    "type": "git",
    "url": "https://github.com/ApexGust/git-merge-into-target"
  },
  "keywords": [
    "git",
    "merge",
    "branch",
    "快速合并",
    "version control",
    "workflow",
    "update",
    "pull",
    "批量更新"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Git"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:gitMergeIntoTarget.mergeToTarget",
    "onCommand:gitMergeIntoTarget.updateAllBranches"
  ],
  "contributes": {
    "commands": [
      {
        "command": "gitMergeIntoTarget.mergeToTarget",
        "title": "Git: 快速合并到分支",
        "category": "Git"
      },
      {
        "command": "gitMergeIntoTarget.updateAllBranches",
        "title": "Git: 一键更新所有本地分支",
        "category": "Git"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "gitMergeIntoTarget.mergeToTarget",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "gitMergeIntoTarget.updateAllBranches",
          "when": "workspaceFolderCount > 0"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "package": "npx vsce package",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.x",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "simple-git": "^3.15.0"
  }
} 